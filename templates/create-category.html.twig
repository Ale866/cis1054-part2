{% extends "layout.html.twig" %}

{% block title %}PIZZERIA MAMMAMIA | Create Category
{% endblock %}

{% block content %}
	{% if is_admin %}
		<div class="form-container h-100">
			<div class="form-body">
				<h1>PIZZERIA MAMMAMIA</h1>
				<form action="category.php" method="POST">
					<div class="form-group">
						<label for="category_name">Category Name</label>
						<input type="text" name="category_name" placeholder="Category Name" required>
						{% include 'error.html.twig' with {field: 'category_name'} %}
					</div>
					<div class="form-group">
						<button class="submit-button" type="submit">Create Category</button>
					</div>
				</form>
			</div>
		</div>
	{% endif %}
{% endblock %}
