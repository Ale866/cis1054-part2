{% extends 'layout.html.twig' %}
{% block navbar %}{% endblock %}
{% block content %}
	<div class="login-container h-100">
		<div class="login-form">
			<h1>PIZZERIA MAMMAMIA</h1>
			<form method="POST" action="register.php">
				<div class="form-group {% if errors['email'] %} form-error {% endif %}">
					<label for="email">Email</label>
					<input class="" type="text" id="email" name="email" value="{{email}}" required>
					{% include 'error.html.twig' with {field: 'email'} %}
				</div>
				<div class="form-group {% if errors['email'] %} form-error {% endif %}">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" required>
					{% include 'error.html.twig' with {field: 'password'} %}
				</div>
				<div class="form-group">
					<button class="submit-button">Registerüçï</button>
				</div>
			</form>

			<div>
				Already have an account?
				<a href="/login">
					Login here
				</a>
			</div>
		</div>
	</div>
{% endblock %}
