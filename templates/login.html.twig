{% extends 'layout.html.twig' %}

{% block title %}PIZZERIA MAMMAMIA | Login
{% endblock %}

{% block content %}
	<div class="form-container login-container">
		<div class="form-body">
			<h1>PIZZERIA MAMMAMIA</h1>
			<form method="POST" action="login.php">
				<div class="form-group  {% if errors.email %} form-error {% endif %}">
					<label for="email">Email</label>
					<input type="text" id="email" name="email" value="{{email}}" {% if errors.email %} aria-describedby="error-email" aria-invalid="true" {% endif %} required>
					{% include 'error.html.twig' with {field: 'email'} %}
				</div>
				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" id="password" name="password" required>
				</div>
				<div class="form-group">
					<button class="submit-button">Loginüçï</button>
				</div>
			</form>
			<div>
				Don't already have an account?
				<a href="/register">
					Register here
				</a>
			</div>
		</div>
	</div>
{% endblock %}
