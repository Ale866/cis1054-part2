{% extends "layout.html.twig" %}

{% block title %}PIZZERIA MAMMAMIA | Book a table
{% endblock %}

{% block content %}
	<div class="wrapper h-100 flex-between">
		<div id="booking-facility-form" class="center w-100 h-75">
			<div class="selection-area w-100 flex-evenly">
				<label for="booking-select">Select Table:</label>
				<select class="booking-select" id="booking-select">
					<option value="0">----- Select a table -----</option>
					{% for table in tables %}
						<option value="{{table.id}}">Table number
							{{table.id}}
							({{table.n_person}}
							people)</option>
					{% endfor %}
				</select>

				<label for="booking-date">Select Date you want to book for:</label>
				<input type="date" id="booking-date" class="booking-date-input" placeholder="Date" min="{{ "now"|date("Y-m-d") }}" value="{{date}}" max="{{ (now|date_modify('+1 year'))|date('Y-m-d') }}" required>

			</div>
			<ul class="container" id="tableList">
				{% for table in tables %}
					<li id="{{table.id}}" class="t{{table.id}}-{{table.n_person}}" data-tableistaken="{{table.taken ? 'true' : 'false'}}">
						<div>Table
							{{table.id}}</div>
						<div>({{table.n_person}}
							people)</div>
					</li>
				{% endfor %}
			</ul>
		</div>
		<aside id="tables-info">
			<div class="selected-tables-info">
				<h1>Selected tables</h1>
				<small>Click on the
					<i class="fas fa-times" title="remove table"></i>
					to remove the table from the list</small>
				<div id="selected-tables-list"></div>
			</div>
			<button id="book-btn">Book!</button>
		</aside>
	</div>
{% endblock %}
{% block javascripts %}
	 <script src="assets/scripts/booking-facility.js"></script>
{% endblock %}
